            <tr>
                <th>Question</th>
                  <th>Response</th>

                <th>Date created</th>
                <th>Date updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                  {% set i = 0  %}

        {% for question in questions %}
            <tr>
                <td>{{ question.question }}</td>
                <td> 
                    {% for row in res[i] %}
