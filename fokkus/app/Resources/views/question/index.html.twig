                {% endfor %} </td>
                <td>{% if question.datecreated %}{{ question.datecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if question.dateupdated %}{{ question.dateupdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                            <a class="btn btn-info" href="{{ path('question_edit', { 'id': question.id }) }}">Update</a>
                    </ul>
                </td>
            </tr>
                              {% set i = i+1  %}

        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
