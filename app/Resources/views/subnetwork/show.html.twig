
{% extends 'base.html.twig' %}
{% block body %}
    <section>
        <!-- Page content-->
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-body text-center">
                            <div class="pv-lg">
                                <img src="{{ asset(subNetwork.getWebPath()) }}" alt="Group"
                                class="center-block img-responsive img-circle img-thumbnail thumb96">
                            </div>
                            <h3 class="m0 text-bold">{{ subNetwork.firstName }} {{ subNetwork.lastName }}</h3>
                            <div class="mv-lg">
                                <p>Mail: {{ subNetwork.mail }}, society: {{ subNetwork.society }}, fix: {{ subNetwork.fix }},
                                    mobile: {{ subNetwork.mobile }},
                                    twitter: {{ subNetwork.twitter }}, site: {{ subNetwork.site }}, {% if subNetwork.user %} {{ subNetwork.user.username }}{% else %}No accompte{% endif %}, description: {{ subNetwork.description }}</p>
                            </div>
                            <div class="text-center"><a href="#" class="btn btn-primary">{{ subNetwork.createdDate|date('Y-m-d H:i:s') }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
