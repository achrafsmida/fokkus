{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Network |
                <small>List</small>
                <a class="btn btn-success btn-xs pull-right" href="{{ path('subnetwork_new') }}">Create a new sub network</a>
            </div>
            <div class="panel-body">

                <table id="datatable2" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>UserName</th>
                        <th>Mail</th>
                        <th>Society</th>
                        <th>Fix</th>
                        <th>Mobile</th>
                        {#<th>Twitter</th>#}
                        {#<th>Site</th>#}
                        {#<th>Description</th>#}
                        <th>Network</th>
                        {#<th>Date</th>#}
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for sub in subs %}
                        <tr>
                            <td>{{ sub.firstName }}</td>
                            <td>{{ sub.lastName }}</td>
                            {% if sub.user %}
                                <td>{{ sub.user.userName }}</td>
                            {% else %}
                                <td><span class="label label-success">pas de compte</span></td>
                            {% endif %}
                            <td>{{ sub.mail }}</td>
                            <td>{{ sub.society }}</td>
                            <td>{{ sub.fix }}</td>
                            <td>{{ sub.mobile }}</td>
                            {#<td>{{ sub.twitter }}</td>#}
                            {#<td>{{ sub.site }}</td>#}
                            {#<td>{{ sub.description }}</td>#}
                            <td>{{ sub.network }}</td>
                            {#<td>{{ sub.createdDate|date('Y-m-d H:i') }}</td>#}
                            <td>

                                <a class="btn btn-info" href="{{ path('subnetwork_show', { 'id': sub.id }) }}">show</a>
                                {% if  is_granted('ROLE_ADMIN_GROUP')  %}
                                <a class="btn btn-warning" href="{{ path('subnetwork_edit', { 'id': sub.id }) }}">edit</a>
                                <a class="btn btn-danger" href="{{ path('deleted_sub', { 'id': sub.id }) }}">Delete</a>
                                {% endif %}
                                {% if  is_granted('ROLE_ADMIN')  %}
                                    <a class="btn btn-warning" href="{{ path('subnetwork_edit', { 'id': sub.id }) }}">edit</a>
                                    <a class="btn btn-danger" href="{{ path('deleted_sub', { 'id': sub.id }) }}">Delete</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


                {% endblock %}
