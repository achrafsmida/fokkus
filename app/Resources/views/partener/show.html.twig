{% extends 'base.html.twig' %}

{% block body %}
    <h1>Partener</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partener.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ partener.type }}</td>
            </tr>
            <tr>
                <th>Createddate</th>
                <td>{% if partener.createdDate %}{{ partener.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updateddate</th>
                <td>{% if partener.updatedDate %}{{ partener.updatedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('partener_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('partener_edit', { 'id': partener.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
