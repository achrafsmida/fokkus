{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Network |
                <small>List</small>
                {#<a class="btn btn-success btn-xs pull-right" href="{{ path('partener_new') }}">Create a new network</a>#}

                <a class="btn btn-success btn-xs pull-right" href="{{ path('partener_new') }}">Create a new partener</a>

            </div>
            <div class="panel-body">

                <table id="datatable2" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Type</th>
                        <th>Group</th>
                        <th>Date creation</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for partener in parteners %}
                        <tr>
                            <td>{{ partener.type }}</td>
                            <td>{{ partener.group.name }}</td>
                            <td>{{ partener.createdDate|date('Y-m-d H:i') }}</td>
                            <td>
                                <a class="btn btn-info" href="{{ path('partener_show', { 'id': partener.id }) }}">show</a>

                                <a class="btn btn-warning"
                                   href="{{ path('partener_edit', { 'id': partener.id }) }}">edit</a>
                                <a class="btn btn-danger" href="{{ path('deleted_partener', { 'id': partener.id }) }}">Delete</a>

                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


                {% endblock %}
