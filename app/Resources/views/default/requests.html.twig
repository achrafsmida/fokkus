{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Demande de contacts |
                <small>List</small>
            </div>
            <div class="panel-body">

                <table id="datatable2" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Sender</th>
                        <th>Receiver</th>
                        <th>Date creation</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for request in requests %}
                    {% if request %}
                        <tr>
                            <td>  {% if request.sender %}{{ request.sender.username }} {% endif %} </td>
                            <td>{{ request.receiver.username }} </td>
                            <td>{{ request.createdAt|date('Y-m-d H:i') }}</td>
                            {% if request.status %}
                                <td><a href="{{ path('edit_status', { 'id': request.id }) }}"><span class="label label-success">Yes</span></a></td>
                            {% else %}
                                <td><a href="{{ path('edit_status', { 'id': request.id }) }}"><span class="label label-danger">No</span></a></td>
                            {% endif %}
                            {#<td>#}
                                {#<a class="btn btn-info" href="{{ path('network_show', { 'id': network.id }) }}">show</a>#}
                                {#{% if is_granted('ROLE_SUPER_ADMIN') %}#}
                                {#<a class="btn btn-warning"#}
                                   {#href="{{ path('network_edit', { 'id': network.id }) }}">edit</a>#}
                                {#<a class="btn btn-danger" href="{{ path('deleted_sub', { 'id': network.id }) }}">Delete</a>#}
                                {#{% endif  %}#}
                            {#</td>#}
                        </tr>
                    {% endif %}
                    {% endfor %}
                    </tbody>
                </table>


                {% endblock %}
