{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Network |
                <small>List</small>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a class="btn btn-success btn-xs pull-right" href="{{ path('network_new') }}">Create a new network</a>
                {% endif %}
            </div>
            <div class="panel-body">

                <table id="datatable2" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Type</th>
                        <th>Group</th>
                        <th>Date creation</th>
                        <th>Have Accompte</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for network in networks %}
                        <tr>
                            <td>{{ network.type }}</td>
                            <td>{{ network.group.name }}</td>
                            <td>{{ network.createdDate|date('Y-m-d H:i') }}</td>
                            {% if network.haveUser %}
                                <td><span class="label label-success">Yes</span></td>
                            {% else %}
                                <td><span class="label label-success">No</span></td>
                            {% endif %}
                            <td>
                                <a class="btn btn-info" href="{{ path('network_show', { 'id': network.id }) }}">show</a>
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <a class="btn btn-warning"
                                   href="{{ path('network_edit', { 'id': network.id }) }}">edit</a>
                                <a class="btn btn-danger" href="{{ path('deleted_sub', { 'id': network.id }) }}">Delete</a>
                                {% endif  %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


                {% endblock %}
