    {% extends 'base.html.twig' %}

{% block body %}


<div class="row">

    {% for network in networks %}

        <div class="col-md-4">
            <h4 class="mv-lg pv-lg text-dark">{{ network.type }}</h4>
            <div id="accordion1" class="panel-group">

                {% for sub in network.subNetwork %}

                    <div class="panel panel-default b0">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion1" href="#{{ sub.id }}">
                                    <small>
                                        <em class="fa fa-plus text-primary mr"></em>
                                    </small>
                                    <span>{{ sub.lastName }}</span>
                                </a>
                            </h4>
                        </div>
                        <div id="{{ sub.id }}" class="panel-collapse collapse">
                            <div class="panel-body">
                                <p>{{ sub.lastName }} {{ sub.firstName }}</p>
                                <div class="pull-right">
                                    <small class="text-muted mr">Contacter</small>
                                    <button type="button" class="btn btn-default btn-xs">
                                        <em class="fa fa-thumbs-up text-muted"></em>
                                    </button>

                                </div>
                            </div>
                        </div>

                    </div>
                {% endfor %}

            </div>

        </div>
    {% endfor %}

</div>


