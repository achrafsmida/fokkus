{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Dashboard |
                    <small>Messages EnvoyÃ©es</small>
                    <a class="btn btn-xs btn-success pull-right" href="{{ path('message_new') }}">Create a new
                        message</a>

                </div>
                <div class="panel-body">
                    <table id="datatable2" class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Subject</th>
                            <th>Message</th>
                            <th>Receivers</th>
                            <th>Created date</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for message in messages %}
                            <tr>
                                <td>
                                    {{ message.message }} </td>
                                <td>{{ message.subject }}</td>
                                <td>{% for user in  message.users %}
                                        {{ user.username }}
                                    {% endfor %}</td>
                                <td>{% if message.createdDate %}{{ message.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>
                                    <a class="btn btn-info"
                                       href="{{ path('message_edit', { 'id': message.id }) }}">Edit</a>
                                    <a class="btn btn-success"
                                       href="{{ path('message_show', { 'id': message.id }) }}">Show</a>
                                    <a class="btn btn-danger"
                                       href="{{ path('message_delete', { 'id': message.id }) }}">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
