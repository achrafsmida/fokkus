{% extends 'base.html.twig' %}

{% block body %}

    
          <div class="row">
                  <div class="col-lg-12">
                     <div class="panel panel-default">
                        <div class="panel-heading">
                           TIME LINE |
                           <small>Commerciale</small>
                        </div>
                        <div class="panel-body">
                           <table id="datatable2" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Response</th>
                <th>Points</th>
                <th>Datacreated</th>
                <th>Dataupdated</th>
                <th>Datastatus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for response in responses %}
            <tr>
                <td><a href="{{ path('response_show', { 'id': response.id }) }}">{{ response.id }}</a></td>
                <td>{{ response.response }}</td>
                <td>{{ response.points }}</td>
                <td>{% if response.datacreated %}{{ response.datacreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if response.dataupdated %}{{ response.dataupdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ response.datastatus }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('response_show', { 'id': response.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('response_edit', { 'id': response.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('response_new') }}">Create a new response</a>
        </li>
    </ul>
{% endblock %}
