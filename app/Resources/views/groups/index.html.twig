{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Network |
                <small>List</small>
                <a class="btn btn-success btn-xs pull-right" href="{{ path('groups_new') }}">Create a new group</a>

            </div>
            <div class="panel-body">

                <table id="datatable2" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date creation</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for group in groups %}
                        <tr>
                            <td>{{ group.name }}</td>
                            <td>{{ group.createdDate|date('Y-m-d H:i') }}</td>
                            <td>
                                <a class="btn btn-info" href="{{ path('groups_show', { 'id': group.id }) }}">show</a>

                                <a class="btn btn-warning"
                                   href="{{ path('groups_edit', { 'id': group.id }) }}">Edit</a>
                                <a class="btn btn-danger" href="{{ path('deleted_group', { 'id': group.id }) }}">Delete</a>

                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


                {% endblock %}
